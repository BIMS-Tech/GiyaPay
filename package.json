    "bcrypt": "^5.1.0",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.10",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.17.3",
    "multer": "^1.4.4",
    "mysql2": "^3.6.0"
  }
