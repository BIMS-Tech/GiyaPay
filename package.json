{
  "name": "giyapay-blog-backend",
  "version": "1.0.0",
  "description": "Backend for managing blog posts for giyapay.webflow",
  "main": "server.js",
  "scripts": {
    "start": "node start-servers.js",
    "frontend": "cd frontend && npm start",
    "backend": "cd backend && npm start",
    "dev": "node start-servers.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "both": "node start-servers.js",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "generate-sitemap": "node backend/generate-sitemap.js"
  },
